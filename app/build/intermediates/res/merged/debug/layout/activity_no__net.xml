<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_no__net"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="criminalintent.android.bignerdranch.com.criminalintent.No_Net">

    <TextView
        android:text="Nuk ka lidhje me internetin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="normal"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/no_net_Title"

        android:layout_centerInParent="true"
        tools:text="Nuk ka lidhje me internetin"/>

    <Button
        android:text="Rifresko Faqen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_net_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/no_net_button"/>

</RelativeLayout>
